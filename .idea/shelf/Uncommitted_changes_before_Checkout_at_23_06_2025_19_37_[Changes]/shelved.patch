+fun String.toCardDto(): CardDto? {
+    return when {
+        equals("WIZARD", ignoreCase = true) -> CardDto(
+            color = "SPECIAL",
+            value = "0",
+            type = "WIZARD"
+        )
+
+        equals("JESTER", ignoreCase = true) -> CardDto(
+            color = "SPECIAL",
+            value = "0",
+            type = "JESTER"
+        )
+
+        contains("_") -> {
+            val parts = this.split("_")
+            if (parts.size == 2) {
+                CardDto(color = parts[0], value = parts[1], type = "NUMBER")
+            } else null
+        }
+
+        else -> null
+    }
